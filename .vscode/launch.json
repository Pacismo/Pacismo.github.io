    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Website",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:1313/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost:1313/",
                    "path": "${workspaceFolder}/content/"
                },
                {
                    "url": "http://localhost:1313/js",
                    "path": "${workspaceFolder}/templates/franciscosp-theme/assets/js"
                }
            ]
        }
    ]
}
